{
  "name": "ember-cli-checkup",
  "version": "0.0.2",
  "description": "The default blueprint for ember-cli addons.",
  "keywords": [
    "ember-addon"
  ],
  "repository": "https://github.com/scalvert/ember-cli-checkup.git",
  "license": "MIT",
  "author": "scalvert <steve.calvert@gmail.com>",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib/*",
    "dev": "tsc -w",
    "lint": "eslint --ext js,ts .",
    "prepublishOnly": "yarn build",
    "postpublish": "yarn clean",
    "test": "yarn build && qunit lib/tests && yarn clean",
    "test:debug": "yarn build && node --inspect-brk=1337 node_modules/.bin/qunit lib/tests",
    "test:dev": "yarn build && qunit lib/tests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --ext js,ts . --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@glimmer/reference": "^0.47.0",
    "@glimmer/runtime": "^0.47.0",
    "@glimmer/syntax": "^0.47.0",
    "@glimmer/validator": "^0.47.0",
    "@simple-dom/interface": "^1.4.0",
    "capitalize": "^2.0.1",
    "chalk": "^2.4.2",
    "cli-table3": "^0.5.1",
    "columnify": "^1.5.4",
    "ember-template-recast": "^3.3.1",
    "globby": "^10.0.1",
    "ora": "^4.0.3",
    "p-map": "^3.0.0"
  },
  "devDependencies": {
    "@babel/traverse": "^7.7.4",
    "@babel/types": "7.8.3",
    "@ember/optional-features": "^0.7.0",
    "@types/babel__traverse": "^7.0.7",
    "@types/capitalize": "^1.0.1",
    "@types/chalk": "^2.2.0",
    "@types/console-ui": "^2.2.3",
    "@types/ember": "^3.1.1",
    "@types/ember-test-helpers": "^1.0.6",
    "@types/node": "^13.5.0",
    "@types/qunit": "^2.5.4",
    "@types/resolve": "^0.0.8",
    "@types/rsvp": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "ember-cli": "^3.14.0",
    "ember-source": "~3.16.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-ember": "^7.7.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "fixturify-project": "^1.9.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "loader.js": "^4.7.0",
    "prettier": "^1.19.1",
    "qunit": "^2.9.3",
    "qunit-dom": "^0.9.2",
    "release-it": "^12.2.1",
    "release-it-lerna-changelog": "^1.0.3",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3",
    "typescript-require": "^0.2.10"
  },
  "engines": {
    "node": "8.* || >= 10.*"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md"
      }
    },
    "git": {
      "tagName": "v${version}",
      "changelog": "git log --pretty=format:\"* %s (%h)\" --no-merges --perl-regexp --author=\"^((?!dependabot-preview).*)$\" ${latestTag}...HEAD"
    },
    "github": {
      "release": true
    }
  }
}
