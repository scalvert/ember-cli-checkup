{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "lib"
  },
  "files": ["src/addon.ts"],
  "include": ["src/tests"]
}
