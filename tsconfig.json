{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "commonjs",
    "paths": {
      "ember-cli-checkup": ["lib"],
      "ember-cli-checkup/*": ["lib/*"],
      "*": ["types/*"]
    }
  },
  "include": ["lib", "node-tests", "types"]
}
